{
  "ExchangeRate": {
    "Cache": {
      "Type": "Redis",
      "TtlMinutes": 5
    }
  },
  "CacheSettings": {
    "LatestRatesMinutes": 5,
    "CurrenciesListHours": 24,
    "HistoricalRatesMinutes": 60,
    "ConversionMinutes": 5
  },
  "ResilienceSettings": {
    "Retry": {
      "MaxRetryAttempts": 3,
      "BaseDelaySeconds": 1,
      "MaxDelaySeconds": 30,
      "UseJitter": true
    },
    "CircuitBreaker": {
      "FailureRatio": 0.5,
      "SamplingDurationSeconds": 30,
      "MinimumThroughput": 5,
      "BreakDurationSeconds": 60
    },
    "Timeout": {
      "PerAttemptTimeoutSeconds": 10,
      "TotalTimeoutSeconds": 60
    }
  },
  "JwtSettings": {
    "Secret": "",
    "ExpirationMinutes": 30
  },
  "RateLimiting": {
    "Fixed": {
      "PermitLimit": 60,
      "WindowSeconds": 60
    },
    "Sliding": {
      "PermitLimit": 20,
      "WindowSeconds": 60,
      "SegmentsPerWindow": 6
    }
  },
  "ConnectionStrings": {
    "Redis": null
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "yourdomain.com"
}