{
  "CurrencyProvider": {
    "DefaultProvider": "Frankfurter",
    "Frankfurter": {
      "BaseUrl": "https://api.frankfurter.dev/v1/",
      "TimeoutSeconds": 30
    }
  },
  "ExchangeRate": {
    "Provider": "Frankfurter",
    "Cache": {
      "Type": "Memory",
      "TtlMinutes": 5
    }
  },
  "Jwt": {
    "Issuer": "CurrencyConverter",
    "Audience": "CurrencyConverter",
    "Key": "your-development-secret-key-change-in-production"
  },
  "RateLimiting": {
    "RequestsPerMinute": 100
  },
  "ConnectionStrings": {
    "Redis": ""
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
