      "MinimumThroughput": 3,
      "BreakDurationSeconds": 30
    },
    "Timeout": {
      "PerAttemptTimeoutSeconds": 10,
      "TotalTimeoutSeconds": 30
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "CurrencyConverterDemo": "Debug"
      }
    }
  }
