{
  "JwtSettings": {
    "Secret": "DevSecret-minimum-32-characters-long-key-here!!",
    "ExpirationMinutes": 120
  },
  "ConnectionStrings": {
    "Redis": "localhost:6379,password=dev-password-change-in-production"
  },
  "CacheSettings": {
    "LatestRatesMinutes": 2,
